<%= turbo_frame_tag "books-list"   do %>
  <div class="container-fluid scaffold-list">
    <h4>BOOKS</h4>

    <%= render partial: "books/new_button", locals: {}%><br />

    
    <div class="row scaffold-heading-row">
      <div class='col-md-2'>Name<br />Author</div>
<div class='col-md-2'>Blurb<br />Long description</div>
<div class='col-md-2'>Cost<br />How many printed</div>
<div class='col-md-2'>Approved at<br />Release on</div>
<div class='col-md-2'>Time of day<br />Selected<br />Genre</div>
      

      

      <div class=' scaffold-col-heading scaffold-col-heading-buttons col-md-2' >

      </div>
    </div>
      <% if books.empty? %>
    <div>
        None
    </div>
      <% end %>
      <% books.each do |book| %>
        <%= render partial: 'books/line', locals: {book: book } %>
      <% end %>
    <% if books.respond_to?(:total_pages) %><%= paginate(books) %> <% end %>
  
  </div>
<% end %>
