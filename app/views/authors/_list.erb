<%= turbo_frame_tag "authors-list"   do %>
  <div class="container-fluid scaffold-list">
    <h4>AUTHORS</h4>

    <%= render partial: "authors/new_button", locals: {}%>

    
    <div class="row scaffold-row">
      <div class='col-md-1'>Name</div>
      

      

      <div class=' scaffold-col-heading scaffold-col-heading-buttons col-md-2' >

      </div>
    </div>
      <% if authors.empty? %>
    <div>
        None
    </div>
      <% end %>
      <% authors.each do |author| %>
        <%= render partial: 'authors/line', locals: {author: author } %>
      <% end %>
    <% if authors.respond_to?(:total_pages) %><%= paginate(authors) %> <% end %>
  
  </div>
<% end %>
